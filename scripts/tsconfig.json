{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}